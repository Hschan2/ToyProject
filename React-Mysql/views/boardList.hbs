<!DOCTYPE html>
<html lang="kr">
<head>
    <meta charset="UTF-8">
    {{!-- <meta name="viewport" content="width=device-width, initial-scale=1.0"> --}}
    <link rel="shortcut icon" type="image/x-icon" href="https://image.flaticon.com/icons/png/512/744/744307.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <script>
        /* 다른 페이지에서 뒤로 가기로 왔을 때, 한 번 새로고침 */
        window.onpageshow = function(event) {
            if(event.persisted || (window.performance && window.performance.navigation.type == 2)) {
                self.name = '';
                
                if (self.name != 'reload') {
                    self.name = 'reload';
                    self.location.reload(true);
                    self.name = '';
                }
                else self.name = '';
            }
        }

        /* 글 삭제 후, Param이 넘어왔을 때, 삭제 완료 메세지 */
        const now_URL = document.URL;
        const check_Url = new URL(now_URL);
        let check_param = check_Url.searchParams.get("check");

        if(check_param === "true") {
            alert("글 삭제가 완료되었습니다.");
            window.location.href = '/boardList/';
        }
    </script>
    <title>게시판</title>
</head>
<body>
    <nav>
        <div class="container">
            <ul>
                <li><a href="/">메인</a></li>
                {{#if user}}
                    <li><a href="/boardList">게시판</a></li>
                    <li><a href="/profile">내 정보</a></li>
                    <li><a href="/auth/logout">로그아웃</a></li>
                {{else}}
                    <li><a href="/login">로그인</a></li>
                    <li><a href="/register">회원가입</a></li>
                {{/if}}
            </ul>
        </div>
    </nav>
 
    <div class="container mt-4">
        <div class="jumbotron-fluid mx-4" style="border: none;">
            <h4>자유게시판</h4>
            <hr class="my-4">
            <table class="board-table table table-sm table-hover table-striped text-center" style="border: 1px solid grey;">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">번호</th>
                        <th scope="col">제목</th>
                        <th scope="col">작성자</th>
                        <th scope="col">조회수</th>
                    </tr>
                </thead>
                <tbody class="smallSizeFont">
                    {{#if boards}}
                        {{#each boards}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td><a href="/boardRead?id={{this.id}}" class="readA d-inline-block text-truncate">{{this.title}}</a></td>
                                <td>{{this.name}}</td>
                                <td>{{this.count}}</td>
                            </tr>
                        {{/each}}
                    {{else}}
                        <tr>
                            <td colspan="4">게시글이 없습니다.</td>
                        </tr>
                    {{/if}}
                </tbody>
            </table>
            <div class="writeSearchBox">
                <a class="btn btn-primary rowAlign buttonLineUp" href="/boardWrite">글쓰기</a>
                <form action="/auth/boardList" method="POST" class="rowAlign">
                    <input type="text" class="form-control shortBox rowAlign" name="search" required>
                    <button type="submit" class="btn btn-primary buttonLineUp">검색</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>